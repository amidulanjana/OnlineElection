
@model IEnumerable<OnlineElection.Domain.ViewModels.NotificationsViewModel>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/lobibox.min.js"></script>
<link rel="stylesheet" href="~/Content/lobibox.min.css" />

@foreach (var item in Model)
{
    string status = "";
    string msg = "";

    if (@item.Type == "start")
    {
        status = "Started";
        msg = "Please Vote Here";
    }
    else if (@item.Type == "ended")
    {
        status = "Ended";
        msg = "You can watch the results";
    }

    <script type="text/javascript">
            Lobibox.notify('success', {
                position: 'bottom right',
                title: '@item.Name'+' is just ' + '@status',
                size: 'mini',
                msg: '@msg'
            });
    </script>
}