</script>

@*Signal R messeging Scripts*@

    <script src="/Scripts/jquery.signalR-2.1.1.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="/signalr/hubs"></script>
    <script type="text/javascript">
        var i = 0;
    $(function () {
        // Declare a proxy to reference the hub.
        var notifications = $.connection.messagesHub;

        //debugger;
        // Create a function that the hub can call to broadcast messages.
        notifications.client.updateMessages = function () {
            if (i == 0) {
                getAllMessages();
                getMessegeNotifications();
                getPollNotifications();
                resetI();
            }
            i++;

        };
        // Start the connection.
        $.connection.hub.start().done(function () {
            alert("connection started")
            getAllMessages();
            getAllPollNotifications();
        }).fail(function (e) {
            alert(e);
        });
    });

    function resetI() {
        setTimeout(function () {

            i = 0;
        }, 3000);
    }
    

    function getAllMessages()
    {
        var tbl = $('#messegeShow');
        $.ajax({
            url: 'home/GetMessages',
            contentType: 'application/html ; charset:utf-8',
            type: 'GET',
            dataType: 'html'
        }).success(function (result) {
            tbl.empty().append(result);
        }).error(function (xhr, ajaxOptions, thrownError) {

            alert(xhr.status);
            alert(thrownError);
            alert(xhr.responseText);

        });
    }
    function getMessegeNotifications() {
        var tbl = $('#body');
        $.ajax({
            url: 'home/GetNotifications',
            contentType: 'application/html ; charset:utf-8',
            type: 'GET',
            dataType: 'html'
        }).success(function (result) {
            tbl.append(result);

            //$('#notifyIcon').show();
            $("#notifyIcon").show().delay(3000).fadeOut();
        }).error(function (xhr, ajaxOptions, thrownError) {

            alert(xhr.status);
            alert(thrownError);
            alert(xhr.responseText);

        });
    }

    function getAllPollNotifications() {
        var tbl = $('#notificationShow');
        $.ajax({
            url: 'home/GetAllPollNotifications',
            contentType: 'application/html ; charset:utf-8',
            type: 'GET',
            dataType: 'html'
        }).success(function (result) {
            tbl.empty().append(result);
        }).error(function (xhr, ajaxOptions, thrownError) {

            alert(xhr.status);
            alert(thrownError);
            alert(xhr.responseText);

        });
    }
    function getPollNotifications() {
        var tbl = $('#notificationShow');
        $.ajax({
            url: 'home/GetAllPollNotifications',
            contentType: 'application/html ; charset:utf-8',
            type: 'GET',
            dataType: 'html'
        }).success(function (result) {
            tbl.empty().append(result);
            $("#notifyIcon2").show().delay(3000).fadeOut();
        }).error(function (xhr, ajaxOptions, thrownError) {

            alert(xhr.status);
            alert(thrownError);
            alert(xhr.responseText);

        });
    }


    </script>
}



