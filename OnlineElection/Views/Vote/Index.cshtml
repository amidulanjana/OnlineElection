@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Vote";
}



<div class="row">
    <div class="col-sm-12" style="background-color:black; text-align:left;min-height:60px;">
        <h3 style="color:#36b3e2;padding-left:60px;position:absolute">
            @ViewData["Message"]
        </h3>
    </div>







    @*Voting Div*@
    <div class="col-sm-3" style="background-color:#fff;z-index:1;margin:0.5%">
        <div class="col-sm-12" style="padding:10px;">
            <h4><b>Candidates List</b></h4>
        </div>
        <form action="/home/VoteSubmit" method="post">
            <table class="myTable">
                @foreach (var cand in ViewBag.Candidates)
                {
                    <tr>
                        <td>
                            @cand
                        </td>
                        <td>
                            <input type="radio" name="selctedCandidate" value="@cand" />
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="2" style="text-align:center">
                        <button type="submit" class="btn-success">Submit</button>
                    </td>
                </tr>
            </table>
        </form>
    </div>
    @*End of Voting Div*@


    @*Quiz Description View*@
    <div class="col-sm-8" style="background-color:#fff;margin:0.5%">
        <h3> Poll Description </h3>

        <p style="padding-left:30px">
            @ViewData["Description"]
        </p>
    </div>
    @*End of Quiz Description*@

    @*Candidates Detail View*@
    <div class="col-sm-8" style="background-color:#fff;margin:1%">
        <h3> Candidates Detailed View </h3>

        @*Collapase Detail View*@
        <div class="panel-group" id="accordion" style="padding-left:10%">
            @{
                var xVal = 1;
                var imageModel = 10000;
            }

            @*1st Candidate*@
            <div class="panel panel-default" style="width:80%">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="modal" data-target="#@imageModel">
                            <img class="img-responsive img-circle" style="width:10%;" src="~/Content/Images/user.png">
                        </a>

                        @*image Zoom View*@
                        <div class="modal fade" id="@imageModel" role="dialog">
                            <div class="modal-dialog">
                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>

                                    </div>
                                    <div class="modal-body" style="padding:50px">
                                        <img class="img-responsive img-circle" style="height:500px" src="~/Content/Images/user.png">
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    </div>
                                </div>

                            </div>
                        </div>
                        @*End Image Zoom View*@

                        <a data-toggle="collapse" data-parent="#accordion" href="#@xVal">
                            <b>Candidate Name</b>
                            <i class="fa fa-info-circle fa-2x" aria-hidden="true" style="float:right"></i>
                        </a>
                    </h4>
                </div>
                <div id="@xVal" class="panel-collapse collapse" style="padding-left:5%">
                    <div class="panel-body">
                        <table class="table-responsive" id="tableNew" style="width:100%;">
                            <tr>
                                <td>
                                    <b>Name:</b>
                                </td>
                                <td>
                                    Candidate Name
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <b>Account Type:</b>
                                </td>
                                <td>
                                    (staff/student)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <b>Year:</b>
                                </td>
                                <td>
                                    (year)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <b>Batch:</b>
                                </td>
                                <td>
                                    (batch)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <b>Qualifications:</b>
                                </td>
                                <td>
                                    (qualifications)
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

            @{
                xVal++;
                imageModel++;
            }










        </div>
        @*End Collapase Detail View*@

    </div>
    @*End of Candidates Detail View*@
</div>

