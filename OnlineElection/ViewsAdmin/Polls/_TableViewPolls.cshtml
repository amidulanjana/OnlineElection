@model IEnumerable<OnlineElection.DAL.Poll>

<table id="datatable-checkbox" class="table table-striped table-bordered bulk_action">
    <thead>
        <tr>
            <th>Poll Name</th>
            <th>Type</th>
            <th>Date</th>
            <th>Candidates</th>
            <th>Eligible Voters</th>
            <th>Approve</th>
            <th>Respond</th>
        </tr>
    </thead>


    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                <td>
                    @Html.DisplayFor(modelItem => item.DateReange)
                </td>
                <td>
                    <a data-toggle="modal" data-target=".bs-ViewCandidate-modal-sm" href="" onclick="getPollID(this)" data-assigned-id="@item.ID">View Candidates</a>
                </td>
                <td>
                    <a data-toggle="modal" data-target=".bs-example1-modal-sm" href=""  onclick="test(this)" data-assigned-id="@item.ID"> View Eligible Voters</a>
                </td>
                <td id="@item.ID">
                    
                </td>
                <td class="@item.ID">

                    <span data-placement="top" data-toggle="tooltip" title="Delete">
                        <button type="submit" onclick="assignIDModel(this)" data-assigned-id="@item.ID" class="btn btn-info btn-xs" data-title="Edit" data-toggle="modal" data-target=".bs-example-modal-sm"><span class="glyphicon glyphicon-edit"></span></button>
                    </span>

                    @if (@item.adminApproved == false)
                    {
                        <span data-placement="top" data-toggle="tooltip" title="Approve">
                            <button onclick="approve(this)" data-assigned-id="@item.ID" type="submit" class="btn btn-success btn-xs"><span class="glyphicon glyphicon-ok"></span></button>
                        </span>
                    }
                    else
                    {
                        <span data-placement="top" data-toggle="tooltip" title="Ignore">
                            <button onclick="ignore(this)" data-assigned-id="@item.ID" type="submit" class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-remove"></span></button>
                        </span>
                    }

                    <span data-placement="top" data-toggle="tooltip" title="Delete">
                        <button type="submit" onclick="assignIDModel(this)" data-assigned-id="@item.ID" class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target=".bs-example-modal-sm"><span class="glyphicon glyphicon-trash"></span></button>
                    </span>
                </td>
            </tr>
        }

    </tbody>
</table>




